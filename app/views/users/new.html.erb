<h1>New Users</h1>

<%= render "shared/errors" %>

<form action="<%= users_url.html_safe %>" method="post">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <label for="user_email">Email</label>
  <input type="text"
          name="user[email]"
          id="user_email"
          value="">
  <label for="password">Password</label>
  <input type="password"
          name="user[password]"
          id="user_password"
          value="">

  <input type="submit" value="Sign up">
</form>
